<div class="row ">
  <div class="col-lg-4 mx-auto">
    <section class="d-flex justify-content-center ">
      <span class="text-capitalize text-white bg-info rounded">
        <h2 class="py-1 px-3">Log in</h2>
      </span>
    </section>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control py-2 mt-3' %>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'form-control py-2 mt-3' %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field my-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in", class: 'form-control btn btn-success  fw-bold shadow'  %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
