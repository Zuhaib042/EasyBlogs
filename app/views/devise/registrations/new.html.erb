<div class="row ">
  <div class="col-lg-4 mx-auto">
    <section class="d-flex justify-content-center ">
      <span class="text-capitalize text-white bg-info rounded">
        <h2 class="py-1 px-3">Sign up</h2>
      </span>
    </section>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Username', class: 'form-control py-2 mt-3' %>
      </div>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control py-2 mt-3'  %>
      </div>
      <div class="field">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum for password)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: 'form-control py-2 mt-3'  %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation', class: 'form-control py-2 mt-3'  %>
      </div>
      <div class="field">
        <%= f.text_area :bio, autofocus: true, autocomplete: "bio", placeholder: 'Bio', class: 'form-control py-2 mt-3'  %>
      </div>
      <div class="actions mt-3">
        <%= f.submit "Sign up", class: 'form-control btn btn-primary  fw-bold shadow' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
