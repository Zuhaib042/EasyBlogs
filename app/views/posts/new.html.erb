<h5> Create a new Post:</h5>
<%= form_with model: @post, url: user_posts_path do |form| %>
   <div class="form-group">
    <%= form.label :title , "Title" %>
    <%= form.text_field :title %>
   </div>
   <div class="form-group">
    <%= form.label :text , "Text" %>
    <%= form.text_area :text , size: '40*40'%>
   </div> 
    <%= form.submit "Post" %>
<% end %>
